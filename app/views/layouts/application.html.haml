%html.no-js{ lang: 'en' }
  <!--<![endif]-->
  %head
    = render 'shared/head'

  %body{ class: "#{controller_name == 'home' ? '' : 'inside '}#{controller_name} #{action_name}" }
    %section#content
      = render 'shared/alert'
      = render 'shared/header', user_agent: @user_agent
      %main.main= yield
      = render 'shared/footer'

    - if Rails.env.production? && ENV['GOOGLE_ANALYTICS_ID'].present?
      = render 'shared/google_analytics/event_tracking'

    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_API_KEY']}", nonce: true
    = javascript_pack_tag 'application'
    = javascript_pack_tag "#{controller_name}-#{action_name}"
