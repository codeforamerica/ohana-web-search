{
  'extends': 'airbnb-base',
  'parser': 'babel-eslint',
  'env': {
    'browser': true,
    'commonjs': true,
    'es6': true,
    'mocha': true
  },
  'globals': {
    '$': true,
    '__DEV__': true,
    'assert': true,
    'chai': true,
    'sinon': true,
    'expect': true,
    'fixture': true
  },
  'rules': {
    'jsx-a11y/img-has-alt': 'off',
    'func-names': 0,
    'space-before-function-paren': 0,
    'prefer-arrow-callback': 0,
    'import/prefer-default-export': 'off',
    'import/extensions': ['off', 'never'],
    'no-param-reassign': ['off', 'never'],
  },
  'parserOptions': {
    'ecmaVersion': 6,
    'sourceType': 'module'
  }
}
